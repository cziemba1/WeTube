extends layout/main

block content
    .form-container
        .record-container
        form(action="/videos/upload", method="post", enctype="multipart/form-data")
            .fileUpload
                label(for="file") Video File
                input(type="file", id="file", name="videoFile", required=true, accept="video/*")
            input(type="text", placeholder="Title", name="title", required=true)
            textarea(name="description", cols="30", rows="10", placeholder="Description", required=true)
            input(type="submit", placeholder="Upload Video", value="Submit Video")